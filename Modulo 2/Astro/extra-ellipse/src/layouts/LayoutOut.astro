---
import Register from "../components/Register.astro";

interface Props {
  title: string;
  page: boolean;
}

const { title, page } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="mt-10 h-full sm:mx-auto sm: w-full sm:max-w-sm">
      <div class="flex items-end">
        <a
          href="iniciar-sesion"
          class:list={[
            "flex justify-center items-center w-1/3 h-10 bg-green-300 rounded-t-xl",
            { "z-0 w-7/12 text-xl h-14": !page },
          ]}
        >
          <h2 class="text-white">Iniciar Sesion</h2>
        </a>
        <a
          href="registro"
          class:list={[
            "flex justify-center items-center w-1/3 h-10 bg-red-300 rounded-t-xl -mx-4",
            { "z-0 w-7/12 text-xl h-14": page },
          ]}
        >
          <h2 class="text-white">Registrar</h2>
        </a>
        <div></div>
      </div>
      <slot />
    </div>
  </body>
</html>
